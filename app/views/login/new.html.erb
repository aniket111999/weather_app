<h1>Login</h1>

<% if flash[:error] %>
  <div class="alert alert-danger"><%= flash[:error] %></div>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <%= form_tag(login_path) do %>
      <div class="form-group">
        <%= label_tag 'Username' %>
        <%= text_field_tag 'username' %>
      </div>
      <div class="form-group">
        <%= label_tag 'Password' %>
        <%= password_field_tag 'password' %>
      </div>
      <div class="form-group">
        <%= submit_tag 'Login' %>
      </div>
    <% end %>
  </div>
 </div>